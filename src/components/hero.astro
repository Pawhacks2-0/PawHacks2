---
import { Picture } from "astro:assets";
import heroImage from "assets/pawhacks_big_logo.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main class="grid lg:grid-cols-2 place-items-center pt-4 pb-4 md:pt-4 md:pb-8">
  <!-- Hero image will now only show on large screens and above -->
  <div class="py-4 lg:order-1 hidden lg:block">
    <Picture
      src={heroImage}
      alt="PawHacks logo"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <!-- New welcome line with reduced bottom margin -->
    <p class="text-md text-slate-500 opacity-80 mb-1">
      Welcome to Pawhacks 2.0 ðŸ‘‹ 
    </p>
    <h1 class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      The Student-led Hackathon{" "}
      <Link
        href="https://instagram.com/nuoakland"
        target="_blank"
        rel="noopener"
        class="text-blue-500 hover:underline transition-colors inline"
        style="font-size: 0.85em;"
      >
        @ nuoakland
      </Link>
    </h1>
    <!-- Reduced top margin on the paragraph -->
    <p class="text-lg mt-2 text-slate-600 max-w-xl">
      Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed
      do eiusmod tempor incididunt ut labore et dolore magna aliqua. <wbr />
      Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris
      nisi ut aliquip ex ea commodo consequat.
    </p>
    <!-- Reduced top margin and gap on the button container -->
    <div class="mt-4 flex flex-col sm:flex-row gap-2">
      <Link
        href="https://register.pawhacks.io"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener"
      >
        <Icon class="text-white w-5 h-5" name="bx:paperclip" />
         Register Here!
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/about"
        class="flex gap-1 items-center justify-center"
        target="_blank"
      >
        <Icon class="text-black w-4 h-4" name="bx:checkbox-checked" />
         Learn more
      </Link>
    </div>
  </div>
</main>
